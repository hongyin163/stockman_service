<job-scheduling-data   xmlns="http://quartznet.sourceforge.net/JobSchedulingData" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2">

  <processing-directives>
    <overwrite-existing-data>true</overwrite-existing-data>
  </processing-directives>
  <schedule>
    <job>
      <name>data_object_update</name>
      <group>data_object</group>
      <description>大盘数据更新</description>
      <job-type>StockMan.Jobs.Object.ObjectDataUpdateJob,StockMan.Jobs</job-type>
    </job>
    <trigger>
      <cron>
        <name>data_object_update</name>
        <description>大盘日周月线</description>
        <job-name>data_object_update</job-name>
        <job-group>data_object</job-group>
        <cron-expression>0 0/30 10,11,13,14 ? * MON-FRI</cron-expression>
      </cron>
    </trigger>
  </schedule>
  <schedule>
    <job>
      <name>data_stock_update</name>
      <group>data_stock</group>
      <description>个股数据更新</description>
      <job-type>StockMan.Jobs.Stock.StockPriceUpdateJob,StockMan.Jobs</job-type>
    </job>
    <trigger>
      <cron>
        <name>data_stock_update</name>
        <description>个股日周月线</description>
        <job-name>data_stock_update</job-name>
        <job-group>data_stock</job-group>
        <cron-expression>0 10/30 10,11,13,14 ? * MON-FRI</cron-expression>
      </cron>
    </trigger>
  </schedule>
  <schedule>
    <job>
      <name>data_category_update</name>
      <group>data_category</group>
      <description>行业数据更新</description>
      <job-type>StockMan.Jobs.Category.CateIndexUpdateJob,StockMan.Jobs</job-type>
    </job>
    <trigger>
      <cron>
        <name>data_category_update</name>
        <description>行业日周月线</description>
        <job-name>data_category_update</job-name>
        <job-group>data_category</job-group>
        <cron-expression>0 30/30 10,11,13,14 ? * MON-FRI</cron-expression>
      </cron>
    </trigger>
  </schedule>
